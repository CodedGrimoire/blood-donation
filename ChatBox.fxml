<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="ChatBoxController">
    <center>
        <TextArea fx:id="chatArea" editable="false" wrapText="true" />
    </center>
    <bottom>
        <HBox spacing="10">
            <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" text="Send"/>
        </HBox>
    </bottom>
</BorderPane>
